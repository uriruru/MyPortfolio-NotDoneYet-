          <script>
            $(document).ready(function () {
              $('.carousel-slide').slick({
                infinite: true,
                speed: 5000, // set the speed of the carousel animation
                autoplay: true, // enable autoplay
                autoplaySpeed: 0, // set autoplay speed to 0 to enable custom scrolling
                cssEase: 'linear', // set the easing effect of the carousel animation
                slidesToShow: 4,
                responsive: [
                  {
                    breakpoint: 968,
                    settings: {
                      slidesToShow: 2
                    }
                  }
                ]
              });

              // set the custom autoplay scroll function
              $('.carousel-slide').on('setPosition', function () {
                var $slideContainer = $(this).find('.slick-slide');

                function scrollImages() {
                  // get the current slide offset
                  var slideOffset = $('.carousel-slide').offset().left - $('.carousel-container').offset().left;

                  // animate the slide container to move to the next slide
                  $slideContainer.animate({ 'left': -slideOffset }, 2000, 'linear', function () {
                    // after the animation is complete, move the first slide to the end
                    $('.carousel-slide').slick('slickNext');
                  });
                }

                // start the custom autoplay cycle
                scrollImages();

                // pause the custom autoplay when hovering over the carousel
                $('.carousel-container').mouseenter(function () {
                  $slideContainer.stop();
                }).mouseleave(function () {
                  scrollImages();
                });
              });
            });
          </script>


